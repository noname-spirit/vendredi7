{% extends 'base.html.twig' %}

{% block title %}Service index
{% endblock %}


{% block body %}

	<h1 class=" text-center m-4 ">Service index</h1>
	<a href="{{ path('app_service_new') }}" class=" m-4 ">Create new</a>

	<table class="table container">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom</th>
				<th>Description</th>
				<th>Dt_creation</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for service in services %}
				<tr>
					<td>{{ service.id }}</td>
					<td>{{ service.nom }}</td>
					<td>{{ service.description }}</td>
					<td>{{ service.dtCreation ? service.dtCreation|date('Y-m-d H:i:s') : '' }}</td>
					<td>
						<a href="{{ path('app_service_show', {'id': service.id}) }}">show</a>
						<a href="{{ path('app_service_edit', {'id': service.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>


{% endblock %}
